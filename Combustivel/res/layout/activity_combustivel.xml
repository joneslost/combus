<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CombustivelActivity"
    android:background="#000000" >

<TextView
        android:id="@+id/lbl_preco_gasolina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:layout_centerVertical="false"
        android:text="@string/preco_gasolina"
        android:textSize="@dimen/activity_vertical_margin" />

    <EditText
        android:id="@+id/txt_preco_gasolina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lbl_preco_gasolina"
        android:layout_below="@+id/lbl_preco_gasolina"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="numberDecimal" />
    <TextView
        android:id="@+id/lbl_preco_alcool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="102dp"
        android:text="@string/preco_alcool"
        android:textSize="@dimen/activity_horizontal_margin" />

    <EditText
        android:id="@+id/txt_preco_alcool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lbl_preco_alcool"
        android:layout_below="@+id/lbl_preco_alcool"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btn_calcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_preco_alcool"
        android:layout_below="@+id/txt_preco_alcool"
        android:layout_marginTop="43dp"
        android:onClick="onClick"
        android:text="@string/calcular" />

    <Button
        android:id="@+id/btn_sair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btn_calcular"
        android:text="@string/Sair" />

</RelativeLayout>
